generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Business {
  id         String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name       String
  type       String
  city       String
  salesRange String
  currency   String @default("INR") @db.Char(3)

  // Link to Supabase User ID
  userId String @unique

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  monthlyMetrics Metric[]
}

model Metric {
  id             String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  revenue        Decimal     @db.Decimal(16, 2)
  expenses       Decimal     @db.Decimal(16, 2)
  cashInBank     Decimal     @db.Decimal(16, 2)
  topCustomerPct Decimal     @db.Decimal(5, 2)
  score          Int
  scoreStatus    ScoreStatus @default(GREEN)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  business     Business         @relation(fields: [businessId], references: [id], onDelete: Cascade)
  businessId   String           @db.Uuid
  explanations LLMExplanation[]

  @@index([businessId, createdAt(sort: Desc)])
}

model LLMExplanation {
  id                  String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  explanationMarkdown String?   @db.Text
  error               String?
  llmStatus           LLMStatus
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  metric   Metric @relation(fields: [metricId], references: [id], onDelete: Cascade)
  metricId String @db.Uuid
}

enum LLMStatus {
  GENERATED
  ERROR
}

enum ScoreStatus {
  GREEN
  YELLOW
  RED
}
